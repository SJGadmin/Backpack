// This is your Prisma schema file for Backpack Kanban PM
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  cardsCreated     Card[]    @relation("CardCreatedBy")
  tasksCreated     Task[]    @relation("TaskCreatedBy")
  tasksAssigned    Task[]    @relation("TaskAssignedTo")
  commentsCreated  Comment[] @relation("CommentCreatedBy")

  // L10 Meeting Notes relations
  l10SegueEntries   L10SegueEntry[]   @relation("L10SegueEntries")
  l10Rocks          L10Rock[]         @relation("L10Rocks")
  l10LastWeekTodos  L10LastWeekTodo[] @relation("L10LastWeekTodos")
  l10IdsIssuesOwned L10IdsIssue[]     @relation("L10IdsIssueOwner")
  l10NewTodos       L10NewTodo[]      @relation("L10NewTodos")
  l10WrapScores     L10WrapScore[]    @relation("L10WrapScores")
}

model Board {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  columns Column[]
}

model Column {
  id         String   @id @default(cuid())
  boardId    String
  name       String
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards Card[]

  @@index([boardId, orderIndex])
}

model Card {
  id                String   @id @default(cuid())
  columnId          String
  title             String
  description       String?  @db.Text // Rich text JSON
  descriptionPlain  String?  @db.Text // Plain text for search
  dueDate           DateTime?
  orderIndex        Int
  createdById       String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Full-text search
  searchVector      String?  @db.Text // tsvector stored as text

  // Relations
  column         Column                 @relation(fields: [columnId], references: [id], onDelete: Cascade)
  createdBy      User                   @relation("CardCreatedBy", fields: [createdById], references: [id])
  tasks          Task[]
  comments       Comment[]
  attachments    Attachment[]
  links          Link[]
  customFields   CardCustomFieldValue[]

  @@index([columnId, orderIndex])
  @@index([createdById])
  @@index([dueDate])
}

model CardCustomField {
  id          String   @id @default(cuid())
  name        String
  fieldType   String   // "text", "number", "date", "select"
  options     String?  // JSON array for select type
  orderIndex  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  values CardCustomFieldValue[]

  @@index([orderIndex])
}

model CardCustomFieldValue {
  id       String @id @default(cuid())
  cardId   String
  fieldId  String
  value    String @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  card  Card             @relation(fields: [cardId], references: [id], onDelete: Cascade)
  field CardCustomField  @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@unique([cardId, fieldId])
  @@index([cardId])
  @@index([fieldId])
}

model Task {
  id            String    @id @default(cuid())
  cardId        String
  text          String
  completed     Boolean   @default(false)
  dueDate       DateTime?
  assignedToId  String?
  createdById   String
  orderIndex    Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  card       Card  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  createdBy  User  @relation("TaskCreatedBy", fields: [createdById], references: [id])
  assignedTo User? @relation("TaskAssignedTo", fields: [assignedToId], references: [id])

  @@index([cardId, orderIndex])
  @@index([assignedToId])
  @@index([dueDate])
}

model Comment {
  id          String   @id @default(cuid())
  cardId      String
  text        String   @db.Text
  textPlain   String   @db.Text // Plain text for search
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  card      Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  createdBy User @relation("CommentCreatedBy", fields: [createdById], references: [id])

  @@index([cardId])
  @@index([createdById])
}

model Attachment {
  id          String   @id @default(cuid())
  cardId      String
  fileName    String
  fileUrl     String
  fileSize    Int
  mimeType    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([cardId])
}

model Link {
  id          String   @id @default(cuid())
  cardId      String
  url         String
  title       String?
  orderIndex  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([cardId, orderIndex])
}

// ============================================
// L10 Meeting Notes Models
// ============================================

// Folder to organize meetings (Q1, Q2, January, etc.)
model L10Folder {
  id         String   @id @default(cuid())
  name       String
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  documents L10Document[]

  @@index([orderIndex])
}

// Individual L10 Meeting Document
model L10Document {
  id             String   @id @default(cuid())
  folderId       String
  title          String
  meetingDate    DateTime
  weekNumber     Int?
  scorecardNotes String?  @db.Text
  orderIndex     Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  folder          L10Folder           @relation(fields: [folderId], references: [id], onDelete: Cascade)
  segueEntries    L10SegueEntry[]
  scorecardRows   L10ScorecardRow[]
  rocks           L10Rock[]
  lastWeekTodos   L10LastWeekTodo[]
  idsIssues       L10IdsIssue[]
  newTodos        L10NewTodo[]
  wrapFeedback    L10WrapFeedback[]
  wrapScores      L10WrapScore[]
  parkingLotItems L10ParkingLotItem[]

  @@index([folderId, orderIndex])
  @@index([meetingDate])
}

// Segue: Quick check-in per team member
model L10SegueEntry {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  text       String   @db.Text
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User        @relation("L10SegueEntries", fields: [userId], references: [id])

  @@unique([documentId, userId])
  @@index([documentId])
}

// Configurable Scorecard Metrics (shared across all documents)
model L10ScorecardMetric {
  id         String   @id @default(cuid())
  name       String
  orderIndex Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  rows L10ScorecardRow[]

  @@index([orderIndex])
}

// Scorecard Row: Metric value for a specific meeting
model L10ScorecardRow {
  id         String   @id @default(cuid())
  documentId String
  metricId   String
  value      Float?
  notes      String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document        @relation(fields: [documentId], references: [id], onDelete: Cascade)
  metric   L10ScorecardMetric @relation(fields: [metricId], references: [id], onDelete: Cascade)

  @@unique([documentId, metricId])
  @@index([documentId])
}

// Rocks: Quarterly goals per person with On/Off Track toggle
model L10Rock {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  title      String
  isOnTrack  Boolean  @default(true)
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User        @relation("L10Rocks", fields: [userId], references: [id])

  @@index([documentId, userId])
  @@index([orderIndex])
}

// Last Week To-Dos: Per person with Done/Not Done status
model L10LastWeekTodo {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  text       String
  isDone     Boolean  @default(false)
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User        @relation("L10LastWeekTodos", fields: [userId], references: [id])

  @@index([documentId, userId])
  @@index([orderIndex])
}

// IDS Issues: Numbered issues with I/D/S format
model L10IdsIssue {
  id          String    @id @default(cuid())
  documentId  String
  issueNumber Int
  title       String
  identify    String?   @db.Text
  discuss     String?   @db.Text
  solve       String?   @db.Text
  ownerId     String?
  dueDate     DateTime?
  isResolved  Boolean   @default(false)
  orderIndex  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  owner    User?       @relation("L10IdsIssueOwner", fields: [ownerId], references: [id])

  @@index([documentId, orderIndex])
}

// New To-Dos: Per person with due dates
model L10NewTodo {
  id          String    @id @default(cuid())
  documentId  String
  userId      String
  text        String
  dueDate     DateTime?
  isCompleted Boolean   @default(false)
  orderIndex  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User        @relation("L10NewTodos", fields: [userId], references: [id])

  @@index([documentId, userId])
  @@index([orderIndex])
}

// Wrap Feedback: "What worked" and "What sucked"
model L10WrapFeedback {
  id         String   @id @default(cuid())
  documentId String
  type       String   // "worked" or "sucked"
  text       String   @db.Text
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, type])
}

// Wrap Scores: Meeting scores (1-10) per person
model L10WrapScore {
  id         String   @id @default(cuid())
  documentId String
  userId     String
  score      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User        @relation("L10WrapScores", fields: [userId], references: [id])

  @@unique([documentId, userId])
  @@index([documentId])
}

// Parking Lot: Bulleted list of future items
model L10ParkingLotItem {
  id         String   @id @default(cuid())
  documentId String
  text       String   @db.Text
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  document L10Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, orderIndex])
}
